<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="actionBarStyle">@style/PinkActionBar</item>

    </style>
    <style name="hero_title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="hero_details">
        <item name="android:textColor">#727272</item>
    </style>


    <style name="PinkActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/action_bar_bg_color</item>
    </style>



</resources>
